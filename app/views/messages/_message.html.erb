<div class="message">
  <%= gravatar_for(message.chef,size:50) %>
    <p>
        <strong> <%= message.chef.name.capitalize %>:  </strong>
        <span class="content">  <%= message.content %> </span>
        <br>
        <small><em>Created <%= time_ago_in_words(message.created_at) %> ago </em></small>
    </p>
</div>